# ===========================================
# CALL CENTER SYSTEM ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_postgres_password_here
DB_NAME=callcenter

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
JWT_SECRET=your_secure_jwt_secret_here_generate_a_long_random_string

# ===========================================
# ASTERISK TELEPHONY CONFIGURATION
# ===========================================
ASTERISK_ARI_URL=http://localhost:8088/ari
ASTERISK_ARI_USER=callcenter
ASTERISK_ARI_PASSWORD=your_asterisk_ari_password_here

ASTERISK_AMI_HOST=localhost
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USER=callcenter
ASTERISK_AMI_PASSWORD=your_asterisk_ami_password_here

# ===========================================
# BACKEND SERVER CONFIGURATION
# ===========================================
PORT=3001

# ===========================================
# AI SERVICE API KEYS
# ===========================================
# Get these from respective service providers
GEMINI_API_KEY=your_gemini_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# WEBRTC CONFIGURATION
# ===========================================
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_WS_URL=ws://localhost:8088/ws

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development

# ===========================================
# ADDITIONAL SECURITY (Optional)
# ===========================================
# BCRYPT_ROUNDS=12
# SESSION_SECRET=another_secure_secret_here

# ===========================================
# LOGGING & MONITORING (Optional)
# ===========================================
# LOG_LEVEL=info
# ENABLE_METRICS=false